      </ImageView>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="165.0" layoutY="41.0">
         <image>
            <Image url="@../img/chat.gif" />
         </image>
      </ImageView>
      <Label fx:id="lblNames" layoutX="14.0" layoutY="116.0" prefHeight="28.0" prefWidth="400.0" />
