      <Label layoutX="241.0" layoutY="44.0" prefHeight="44.0" prefWidth="178.0" text="CHAT Room" textFill="#192a56">
         <font>
            <Font name="Times New Roman Bold Italic" size="32.0" />
         </font>
      </Label>
      <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/profilepic.png" />
