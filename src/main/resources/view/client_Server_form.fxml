         <children>
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="26.0" prefWidth="108.0" text="Add Members" />
            <Button fx:id="btnLeave" mnemonicParsing="false" onAction="#btnLeaveOnAction" prefHeight="26.0" prefWidth="108.0" text="Leave Group" />
         </children>
      </VBox>
   </children>
</AnchorPane>
